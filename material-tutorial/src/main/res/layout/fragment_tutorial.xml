<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexandrepiveteau.library.tutorial.TutorialFragment">

    <TextView
        android:id="@+id/tutorial_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:layout_marginBottom="108dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="88dp"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tutorial_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tutorial_description"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/tutorial_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tutorial_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tutorial_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/tutorial_image_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tutorial_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:scaleType="centerInside" />

</RelativeLayout>
